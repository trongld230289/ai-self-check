{
  "name": "ai-self-check",
  "displayName": "AI Self Check",
  "description": "AI-powered code review extension with chat participants for intelligent code analysis and git change reviews",
  "version": "1.0.3",
  "publisher": "trongld232",
  "author": {
    "name": "Trong Le",
    "email": "trongld232@gmail.com"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/trongld230289/ai-self-check.git"
  },
  "bugs": {
    "url": "https://github.com/trongld230289/ai-self-check/issues"
  },
  "homepage": "https://github.com/trongld230289/ai-self-check#readme",
  "keywords": [
    "ai",
    "code review",
    "copilot",
    "chat",
    "analysis",
    "typescript",
    "javascript",
    "git",
    "diff",
    "claude",
    "gpt"
  ],
  "engines": {
    "vscode": "^1.90.0"
  },
  "categories": [
    "Other",
    "Machine Learning",
    "Linters"
  ],
  "galleryBanner": {
    "color": "#1e1e1e",
    "theme": "dark"
  },
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./extension.js",
  "contributes": {
    "commands": [
      {
        "command": "aiCodeReviewer.reviewFile",
        "title": "Review File",
        "category": "AI Self Check"
      },
      {
        "command": "aiCodeReviewer.reviewChanges",
        "title": "Review Changes",
        "category": "AI Self Check"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "command": "aiCodeReviewer.reviewFile",
          "group": "navigation@1",
          "when": "editorTextFocus"
        },
        {
          "command": "aiCodeReviewer.reviewChanges",
          "group": "navigation@2",
          "when": "editorTextFocus"
        }
      ],
      "explorer/context": [
        {
          "command": "aiCodeReviewer.reviewFile",
          "group": "navigation@1",
          "when": "resourceExtname =~ /\\.(ts|js|tsx|jsx|py|java|cs|cpp|c|php|rb|go|rs|kt|swift)$/"
        },
        {
          "command": "aiCodeReviewer.reviewChanges",
          "group": "navigation@2",
          "when": "resourceExtname =~ /\\.(ts|js|tsx|jsx|py|java|cs|cpp|c|php|rb|go|rs|kt|swift)$/"
        }
      ]
    },
    "configuration": {
      "title": "AI Self Check",
      "properties": {
        "aiCodeReviewer.azureDevOps.personalAccessToken": {
          "type": "string",
          "default": "",
          "description": "Azure DevOps Personal Access Token for PR review (requires Code:Read and Pull Request:Read permissions)",
          "scope": "application"
        },
        "aiCodeReviewer.azureDevOps.organization": {
          "type": "string",
          "default": "",
          "description": "Default Azure DevOps organization name",
          "scope": "application"
        },
        "aiCodeReviewer.azureDevOps.defaultProject": {
          "type": "string",
          "default": "",
          "description": "Default Azure DevOps project name",
          "scope": "application"
        }
      }
    },
    "chatParticipants": [
      {
        "id": "review-file",
        "name": "review-file",
        "description": "Review a specific file based on review-code.md guidelines",
        "isSticky": true
      },
      {
        "id": "review-changes",
        "name": "review-changes",
        "description": "Review changes in a specific file based on review-code.md guidelines",
        "isSticky": true
      },
      {
        "id": "review-pr",
        "name": "review-pr",
        "description": "Review Azure DevOps Pull Request from URL using AI analysis",
        "isSticky": true
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "echo 'Extension ready for packaging'",
    "test": "echo 'Extension test placeholder'"
  },
  "devDependencies": {
    "@types/vscode": "^1.80.0",
    "@vscode/vsce": "^2.19.0"
  }
}
