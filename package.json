{
  "name": "ai-self-check",
  "displayName": "AI Self Check",
  "description": "AI-powered code review extension with chat participants for intelligent code analysis and git change reviews. Supports GitHub, GitLab, and Azure DevOps.",
  "version": "1.0.35",
  "publisher": "trongld232",
  "icon": "icons/extension-icon.png",
  "author": {
    "name": "Trong Le",
    "email": "trongld232@gmail.com"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/trongld230289/ai-self-check.git"
  },
  "bugs": {
    "url": "https://github.com/trongld230289/ai-self-check/issues"
  },
  "homepage": "https://github.com/trongld230289/ai-self-check#readme",
  "keywords": [
    "ai",
    "code review",
    "copilot",
    "chat",
    "analysis",
    "typescript",
    "javascript",
    "git",
    "diff",
    "claude",
    "gpt",
    "github",
    "gitlab",
    "azure devops"
  ],
  "engines": {
    "vscode": "^1.90.0"
  },
  "categories": [
    "Other",
    "Machine Learning",
    "Linters"
  ],
  "galleryBanner": {
    "color": "#1e1e1e",
    "theme": "dark"
  },
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./extension.js",
  "contributes": {
    "commands": [
      {
        "command": "aiSelfCheck.reviewFile",
        "title": "Review File",
        "category": "AI Self Check"
      },
      {
        "command": "aiSelfCheck.reviewChanges",
        "title": "Review Changes",
        "category": "AI Self Check"
      },
      {
        "command": "aiSelfCheck.reviewPullRequest",
        "title": "Review Azure DevOps PR",
        "category": "AI Self Check"
      },
      {
        "command": "aiSelfCheck.setupAzureDevOps",
        "title": "Setup Azure DevOps Token",
        "category": "AI Self Check"
      },
      {
        "command": "aiSelfCheck.showAvailableModels",
        "title": "Show Available Language Models",
        "category": "AI Self Check"
      },
      {
        "command": "aiSelfCheck.showDailyReport",
        "title": "Show Daily Report",
        "category": "AI Self Check"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "command": "aiSelfCheck.reviewFile",
          "group": "navigation@1",
          "when": "editorTextFocus"
        },
        {
          "command": "aiSelfCheck.reviewChanges",
          "group": "navigation@2",
          "when": "editorTextFocus"
        }
      ],
      "explorer/context": [
        {
          "command": "aiSelfCheck.reviewFile",
          "group": "navigation@1",
          "when": "resourceExtname =~ /\\.(ts|js|tsx|jsx|html|htm|css|scss|less|py|java|cs|cpp|c|php|rb|go|rs|kt|swift)$/"
        },
        {
          "command": "aiSelfCheck.reviewChanges",
          "group": "navigation@2",
          "when": "resourceExtname =~ /\\.(ts|js|tsx|jsx|html|htm|css|scss|less|py|java|cs|cpp|c|php|rb|go|rs|kt|swift)$/"
        }
      ]
    },
    "configuration": {
      "title": "AI Self Check",
      "properties": {
        "aiSelfCheck.azureDevOps.personalAccessToken": {
          "type": "string",
          "default": "",
          "description": "Azure DevOps Personal Access Token for PR review (requires Code:Read and Pull Request:Read permissions)",
          "scope": "application"
        },
        "aiSelfCheck.azureDevOps.organization": {
          "type": "string",
          "default": "",
          "description": "Default Azure DevOps organization name",
          "scope": "application"
        },
        "aiSelfCheck.azureDevOps.defaultProject": {
          "type": "string",
          "default": "",
          "description": "Default Azure DevOps project name",
          "scope": "application"
        },
        "aiSelfCheck.ai.apiKey": {
          "type": "string",
          "default": "",
          "description": "AI API Key for AI-powered code analysis (OpenAI, Claude, or custom AI service)",
          "scope": "application"
        },
        "aiSelfCheck.ai.apiHost": {
          "type": "string",
          "default": "https://api.openai.com",
          "description": "AI API Host URL (OpenAI: https://api.openai.com, Claude: https://api.anthropic.com, or custom host)",
          "scope": "application"
        },
        "aiSelfCheck.ai.model": {
          "type": "string",
          "default": "GPT-5",
          "description": "AI Model to use for code analysis (gpt-4, gpt-5, claude-3-sonnet, or custom model)",
          "scope": "application"
        },
        "aiSelfCheck.useApiKeyInsteadOfCopilot": {
          "type": "boolean",
          "default": false,
          "description": "Use your own AI API key instead of GitHub Copilot for code review (useful for users without Copilot license)",
          "scope": "application"
        },
        "aiSelfCheck.github.personalAccessToken": {
          "type": "string",
          "default": "",
          "description": "GitHub Personal Access Token for PR review (requires repo or public_repo permissions)",
          "scope": "application"
        },
        "aiSelfCheck.gitlab.personalAccessToken": {
          "type": "string",
          "default": "",
          "description": "GitLab Personal Access Token for MR review (requires read_api or api permissions)",
          "scope": "application"
        }
      }
    },
    "chatParticipants": [
      {
        "id": "review-file",
        "name": "review-file",
        "description": "üìÑ Review current opening file  or üîó specify file path",
        "isSticky": true
      },
      {
        "id": "review-changes",
        "name": "review-changes",
        "description": "üîÑ Review changes for current opening file  or üîó specify file path",
        "isSticky": true
      },
      {
        "id": "review-pr",
        "name": "review-pr",
        "description": "üîç Review Azure DevOps Pull Request by PR ID or URL",
        "isSticky": true
      },
      {
        "id": "scan-app",
        "name": "scan-app",
        "description": "ü§ñ AI-powered code scanning and duplicate detection with GPT-5",
        "isSticky": true
      },
      {
        "id": "create-app",
        "name": "create-app",
        "description": "Generate React apps from wireframes",
        "isSticky": true
      },
      {
        "id": "daily-report",
        "name": "daily-report",
        "description": "üìä Generate and view daily project report",
        "isSticky": true
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "echo 'Extension ready for packaging'",
    "test": "echo 'Extension test placeholder'"
  },
  "devDependencies": {
    "@types/vscode": "^1.80.0",
    "@vscode/vsce": "^2.19.0"
  }
}